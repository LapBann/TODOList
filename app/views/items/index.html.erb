      <th>No.</th>
      <th>Status</th>
      <th>Task</th>
      <th>Due</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td style="text-align:center"><%= item.id %></td>
        <td><%= item.status %></td>
        <td><%= item.task %></td>
        <td id='due'><%= item.due %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
